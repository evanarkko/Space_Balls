<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background = "@drawable/starry_sky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">



     <Button
         android:background = "@drawable/tennis_ball"
         android:textSize="50dp"
         android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="@string/play_game_button"
        android:layout_gravity="center_vertical"
        android:onClick="playGame"/>

    <Button
        android:background = "@drawable/woodship1"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="@string/how_to_play_button"
        android:layout_gravity="center_vertical"
        android:onClick="tutorial"/>

    <Button
        android:background = "@drawable/fire_ball"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="@string/high_scores_button"
        android:onClick="highScores"/>

    <Button
        android:background = "@drawable/yellow_ship2"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="@string/settings_button"
        android:onClick="settings"/>

    android:layout_width="wrap_content"
    android:layout_height="54dp"></TableLayout>







