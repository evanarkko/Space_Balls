<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evan.eamiller.spaceballs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.evan.eamiller.spaceballs.StartMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.evan.eamiller.spaceballs.GameActivity"
            android:screenOrientation="landscape" />
        <activity android:name="com.evan.eamiller.spaceballs.Settings" />
        <activity android:name="com.evan.eamiller.spaceballs.Highscores" />
        <activity android:name="com.evan.eamiller.spaceballs.TutorialActivity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>